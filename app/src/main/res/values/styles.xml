<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextLarge">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextMedium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextItalicSmall" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextDetailGas">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--    <style name="fuelapp_ClusterIcon.TextAppearance" parent="amu_ClusterIcon.TextAppearance">-->
<!--        <item name="android:textColor">@color/icons</item>-->
<!--    </style>-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
